{
  "name": "baboon",
  "version": "1.1.0",
  "description": "Yet another implementation of Inuzaru tanka generator",
  "main": "dist/main.js",
  "author": "paithiov909",
  "license": "MIT",
  "private": true,
  "browserslist": [
    "defaults"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/paithiov909/baboon.git"
  },
  "bugs": {
    "url": "https://github.com/paithiov909/baboon/issues"
  },
  "scripts": {
    "dev": "npm run cpy && http-server ./docs --cors",
    "build": "webpack --mode production",
    "cpy": "cpy dist/main.js docs/dist/",
    "lint": "eslint src/index.ts --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.ts": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "project": "./webpack.tsconfig.json"
    },
    "rules": {}
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "cpy-cli": "3.1.1",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "http-server": "0.12.3",
    "husky": "7.0.1",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2",
    "ts-loader": "9.2.3",
    "webpack": "5.45.1",
    "webpack-cli": "4.7.2"
  }
}
